@{
    ViewBag.Title = "Home Page";
}

<div id="carouselCars" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li class="active" data-target="#carouselCars" data-slide-to="0"></li>
        <li data-target="#carouselCars" data-slide-to="1"></li>
        <li data-target="#carouselCars" data-slide-to="2"></li>
        <li data-target="#carouselCars" data-slide-to="3"></li>
        <li data-target="#carouselCars" data-slide-to="4"></li>
        <li data-target="#carouselCars" data-slide-to="5"></li>
        <li data-target="#carouselCars" data-slide-to="6"></li>
        <li data-target="#carouselCars" data-slide-to="7"></li>
        <li data-target="#carouselCars" data-slide-to="8"></li>
        <li data-target="#carouselCars" data-slide-to="9"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Content/Car carousel content/sedan.jpeg" alt="" class="d-block w-100" />
        </div>
        <div class="carousel-item">
            <img src="~/Content/Car carousel content/cabriolet.jpg" alt="" class="d-block w-100" />
        </div>
        <div class="carousel-item">
            <img src="~/Content/Car carousel content/coupe.jpg" alt="" class="d-block w-100" />
        </div>
        <div class="carousel-item">
            <img src="~/Content/Car carousel content/crossover.jpg" alt="" class="d-block w-100" />
        </div>
        <div class="carousel-item">
            <img src="~/Content/Car carousel content/limousine.jpg" alt="" class="d-block w-100" />
        </div>
        <div class="carousel-item">
            <img src="~/Content/Car carousel content/minibus.jpg" alt="" class="d-block w-100" />
        </div>
        <div class="carousel-item">
            <img src="~/Content/Car carousel content/minivan.jpg" alt="" class="d-block w-100" />
        </div>
        <div class="carousel-item">
            <img src="~/Content/Car carousel content/offroad.jpg" alt="" class="d-block w-100" />
        </div>
        <div class="carousel-item">
            <img src="~/Content/Car carousel content/pickup.jpg" alt="" class="d-block w-100" />
        </div>
        <div class="carousel-item">
            <img src="~/Content/Car carousel content/universal.jpeg" alt="" class="d-block w-100" />
        </div>
    </div>
    <a href="#carouselCars" class="carousel-control-prev" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a href="#carouselCars" class="carousel-control-next" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
