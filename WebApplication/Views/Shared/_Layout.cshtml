<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

</head>
<body>
    <div class="container my-no-gutters" style="background-color:white">
        <div style="padding-bottom:5px; background-color:#f39c12;  margin-left:15px; margin-right:15px;"></div>
    </div>
    <div class="navbar navbar-light navbar-expand-lg navbar-fixed-top navbar-padding">
        <div class="container navbar-background my-no-gutters">
            @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "margin-left:15px;" })
            <button type="button" class="navbar-toggler " data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>

            </button>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav mr-auto">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "disable-text-decoration nav-btn" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", null, new { @class = "disable-text-decoration nav-btn" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "disable-text-decoration nav-btn" })</li>
                    <li>@Html.ActionLink("Cars", "CarList", "Car", null, new { @class = "disable-text-decoration nav-btn" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>


    </div>
    <div class="container justify-content-center" style="background-color:white; padding-bottom:20px">
        @RenderBody()


    </div>
    <footer class="container">

        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
