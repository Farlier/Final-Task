<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-light navbar-expand-lg navbar-fixed-top navbar-padding">
        <div class="container navbar-background my-no-gutters">


            @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "margin-left:15px;" })
            <button type="button" class="navbar-toggler " data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>

            </button>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav mr-auto">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { @class = "disable-text-decoration nav-btn" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { @class = "disable-text-decoration nav-btn" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { @class = "disable-text-decoration nav-btn" })</li>
                    <li>@Html.ActionLink("Cars", "CarList", "Car", new { @class = "disable-text-decoration nav-btn" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container" style=" padding-right: 0;
    padding-left: 0;">
        @RenderBody()


    </div>
    <footer class="container">
        
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
